<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_with(model: @subject, local: true) do |f| %>
      <%= render 'shared/error_messages', resource: f.object %>

      <%= f.label :Subject %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit class: "btn btn-primary mt-3" %>
    <% end %>

  </div>
</div>
