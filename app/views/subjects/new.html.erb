<h1>Subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @subject, local: true) do |f| %>
      <%= render 'shared/error_messages', resource: f.object %>

      <%= f.label :Subject %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create subject", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
