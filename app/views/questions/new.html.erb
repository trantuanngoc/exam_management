<h1>Question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @question, local: true) do |f| %>
      <%= render 'shared/error_messages', resource: f.object %>

      <%= f.label :Content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
