<h1>Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @profile, url: user_profile_path(@profile), local:true ) do |f|%>

      <%= f.label :"First name" %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: @profile.first_name %>

      <%= f.label :"Last name" %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: @profile.last_name %>

      <%= f.label :"Address" %>
      <%= f.text_field :address, class: 'form-control', placeholder: @profile.address %>

      <%= f.submit "Save changes", class: "btn btn-primary"%>
    <% end %>

  </div>
</div>
