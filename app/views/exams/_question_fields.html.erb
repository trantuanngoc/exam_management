<div class="nested-fields card mb-4">
  <div class="card-body">
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :content, label: false, required: false %>
    <div class="links mt-2">
      <%= link_to_add_association '+', f, :answers, {data: {"association-insertion-method"=>"after"}, class: "btn btn-primary mb-2" } %>
    </div>
    <%= f.fields_for :answers do |answer| %>
      <%= render "exams/answer_fields", f: answer %>
    <% end %>
    <%= link_to_remove_association "Remove question", f %>
  </div>
</div>
