<%= will_paginate %>
<div class="container">

  <h1 class="my-4 text-center">All users</h1>

  <%= link_to "Create user", new_user_path, class: "btn btn-primary mb-4" %>

  <% @users.each do |user| %>
  <div class="row">
    <div class="col-md-6">
      <a href="#">
        <%= avatar_for(user,100,100) %>
      </a>
    </div>
    <div class="col-md-4">
      <h5><%= link_to user.email, user_profile_path(user) %></h5>
      <%= link_to "delete", user_registration_path(user), class: "btn btn-primary", method: :delete, data: { confirm: "You sure?" } %>
    </div>
  </div>
  <hr>
  <% end %>

<%= will_paginate %>
